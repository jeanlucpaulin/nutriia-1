<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportActivity">

    <!-- Spinner pour le choix du sport -->
    <Spinner
        android:id="@+id/sportSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sportSpinner"
        />

    <!-- Champ d'édition pour les objectifs -->
    <EditText
        android:id="@+id/editTextObjectifs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Objectifs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        />

    <!-- Champ d'édition pour la performance actuelle -->
    <EditText
        android:id="@+id/editTextPerformance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Performance actuelle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextObjectifs"
        />

    <!-- Champ d'édition pour le plan de progression -->
    <EditText
        android:id="@+id/editTextProgression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Plan de progression"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPerformance"
        />

    <!-- Ajoutez d'autres éléments en fonction de vos besoins. -->

</androidx.constraintlayout.widget.ConstraintLayout>
