<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/header"
        layout="@layout/header_menu"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Documentez vous"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/customButton"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:drawableStart="@drawable/menu_icon_plant"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Les fondamentaux \nde la nutrition"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:elevation="3dp"
        android:translationZ="5dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/customButton2"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:drawableStart="@drawable/menu_icon_macronutriment"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Les macronutriments"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:elevation="3dp"
        android:translationZ="5dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/customButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/customButton3"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:drawableStart="@drawable/menu_icon_micronutriment"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Les micronutriments"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:elevation="3dp"
        android:translationZ="5dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/customButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/customButton4"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:drawableStart="@drawable/menu_icon_nutrition"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_light"
        android:text="L'impact de la \n nutrition"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:elevation="3dp"
        android:translationZ="5dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@id/customButton3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        android:id="@+id/bottom_navbar"
        layout="@layout/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>