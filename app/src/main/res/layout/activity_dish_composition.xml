<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/header"
            layout="@layout/header_back"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            />

        <RelativeLayout
            android:id="@+id/linearLayoutComposition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_health_edit_text"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="23sp"
                android:ellipsize="end"
                android:maxLines="5"
                android:singleLine="false"
                android:layout_toStartOf="@id/dish_calorie"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/dish_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@+id/dish_name"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dishList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_health_edit_text"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutComposition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/titleDish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composition_du_plat"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dishCompostion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleDish"
                android:layout_marginStart="30dp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_health_edit_text"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/dishList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/titleRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recette_du_plat"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipeComposition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleRecipe"
                android:layout_marginStart="30dp"
                />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/recipe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>