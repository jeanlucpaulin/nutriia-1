<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/background_main">

    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_health_edit_text"
        android:backgroundTint="#BAEA7D"
        android:padding="8dp"
        android:elevation="5dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp">


        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2sp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_health_edit_text"
        android:backgroundTint="#FFFFFF"
        android:padding="8dp"
        android:elevation="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2sp"
            >
        </TextView>
    </LinearLayout>

</RelativeLayout>