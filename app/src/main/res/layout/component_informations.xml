<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/component_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/objective"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/image_objective"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/title_objective"
        app:layout_constraintBottom_toTopOf="@id/linear_info"
        android:layout_marginEnd="5sp"
        android:src="@drawable/icon_goal_muscle_gain" />

    <TextView
        android:id="@+id/title_objective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:text="Prise de muscles"
        android:textSize="18sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="5sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear_info"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/component_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear_result"
        android:baselineAligned="false"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="@drawable/green_rounded"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/weight_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center"
                android:hint="80"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:background="@drawable/orange_rounded"
            android:layout_weight="2"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/height_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="180"
                android:textSize="15sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:background="@drawable/orange_rounded"
            android:layout_weight="2"
            android:layout_marginEnd="10sp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/age_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_information"
                android:textSize="15sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/validate_button"
        android:baselineAligned="false"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/imc_container"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_shape"
            android:layout_weight="2"
            android:layout_marginEnd="10sp"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_gravity="start">

                <TextView
                    android:id="@+id/body_mass_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_mass_index"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"

                    android:layout_marginEnd="5sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/body_mass_index_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_information"
                    android:layout_marginEnd="10sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/body_mass_index_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_information"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="20dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ideal_weight_container"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_shape"
            android:layout_weight="2"
            android:layout_marginEnd="10sp"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_gravity="start">

                <TextView
                    android:id="@+id/ideal_weight_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ideal_weight"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"

                    android:layout_marginEnd="5sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/ideal_weight_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_information"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginStart="20dp"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/validate_button"
        android:text="@string/validate"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        android:backgroundTint="@color/lime"
        app:layout_constraintTop_toBottomOf="@id/linear_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>