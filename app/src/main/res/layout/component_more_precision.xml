<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/component_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_more_precision"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_optional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:textStyle="italic"
        android:text="@string/optional"
        android:textSize="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="5sp"
        android:layout_marginBottom="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear_info"
        app:layout_constraintStart_toEndOf="@id/component_title" />

    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/component_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:baselineAligned="false"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="@drawable/green_rounded"
            android:layout_marginEnd="10sp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"

                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/weight_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_information"
                android:textSize="15sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/orange_rounded"
            android:layout_weight="2"
            android:layout_marginEnd="10sp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/height_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_information"
                android:textSize="15sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imc_container"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_shape"
            android:layout_weight="2"
            android:layout_gravity="start"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_gravity="start">

                <TextView
                    android:id="@+id/body_mass_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_mass_index"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"

                    android:layout_marginEnd="5sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/body_mass_index_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_information"
                    android:layout_marginEnd="10sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/body_mass_index_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_information"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="20dp"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/give_more_precision"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/give_more_precision"
        android:justificationMode="inter_word"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/linear_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/define_profile"
        android:text="@string/fill_profile"
        android:fontFamily="@font/montserrat"
        app:layout_constraintTop_toBottomOf="@id/give_more_precision"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:backgroundTint="@color/orange" />

</androidx.constraintlayout.widget.ConstraintLayout>