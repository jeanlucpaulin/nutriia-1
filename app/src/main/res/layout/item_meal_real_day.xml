<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_text_meal_no_stroke">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_information"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"  />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_close_30">
    </ImageButton>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_below="@id/textView"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:hint="Entrez votre repas ici"
        android:lines="2"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edit_meal" />

</RelativeLayout>